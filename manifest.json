{
  "manifest_version": 3,
  "name": "Amazon Element ID Extractor",
  "version": "1.0",
  "description": "Extract a specific element ID from Amazon.in and display it in the extension popup",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*"],
      "js": ["content.js"]
    }
  ]
}